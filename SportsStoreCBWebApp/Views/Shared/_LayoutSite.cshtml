<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>SS - @ViewData["Title"]</title>
  <environment include="Development, Production, Staging">
    <link href="~/lib/css/Site.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
  </environment>
</head>
<body>
  <partial name="_HeaderLayout" />
  <div class="dataplacement container-fluid">
    <div class="row">
      <div class="col-sm-2 col-md-2 col-lg-2 col-xl-2">
        @await Component.InvokeAsync("Categories")
      </div>
      <div class="col-sm-10 col-md-10 col-lg-10 col-xl-10" style="border-left: 1px dotted gray;">
        @RenderBody()
      </div>

    </div>
  </div>
  <partial name="_FooterLayout" />
  <environment include="Development, Production, Staging">
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
  </environment>
  @RenderSection("scripts", required: false)
</body>
</html>